@using Pesaresi.Luca._5i.XMLReadWrite
@model List<Persona>
@{
    ViewBag.Title = "XMLReadWrite2";
}

<h1>XMLReadWrite</h1>
@using (Html.BeginForm("Index", "Default", FormMethod.Post))
{
    <button class="btn-default" type="submit" name="AddContatto">Aggiungi Contatto</button>
}

<form>
    <table border="1">
        @foreach (Persona m in Model)
        {
            <tr>
                <td>@m.nome</td>
                <td>@m.cognome</td>
                <td>@m.telefono</td>
                <td>@m.indirizzo</td>
            </tr>
        }
    </table>
</form>
